<div class="w-50">
  <h1>親カテゴリ情報更新</h1>

  <%= form_with model: @major_category, url: dashboard_major_category_path(@major_category), local: true do |f| %>
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label :name, "親カテゴリ名", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :name, class: "form-control col-8" %>
    </div>

    <div class="form-inline mt-4 mb-4 row">
      <%= f.label :description, "親カテゴリの説明", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :description, class: "form-control col-8" %>
    </div>
    
    <div class="form-inline mt-4 mb-4 row">
         <%= f.label "画像", class: "col-2 d-flex justify-content-start" %>
         <% if @major_category.image.attached? %>
           <%= image_tag @major_category.image, id: "major_category-image-preview", class: "img-fluid w-25" %>
         <% else %>
           <img src="#" id="major_category-image-preview" class="">
         <% end %>
         <div class="d-flex flex-column ml-2">
           <small class="mb-3">600px×600px推奨。<br>商品カテゴリーの魅力が伝わる画像をアップロードして下さい。</small>
           <%= f.label "画像を選択", for: "major_category_image", class: "btn samazon-submit-button" %>
           <%= f.file_field :image, { onChange: "javascript: handleImage(this.files);", style: "display: none;"} %>
         </div>
    </div>
    

    <%= f.submit "更新", class: "w-25 btn samazon-submit-button" %>
  <% end %>

  <div class="mt-4"><%= link_to "親カテゴリ一覧に戻る",  dashboard_major_categories_path %></div>
</div>

<%= javascript_include_tag "dashboard/major_categories/edit" %>
