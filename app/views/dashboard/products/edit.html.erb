      <%= f.label :name, "商品名", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :name, class: "form-control col-8" %>
    </div>
    
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label :description, "商品説明", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_area :description, class: "form-control col-8" %>
    </div>    

    <div class="form-inline mt-4 mb-4 row">
      <%= f.label :price, "免税価格", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :price, class: "form-control col-8" %>
    </div>
    
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "消費税込み価格", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :price_with_tax, class: "form-control col-8" %>
    </div>
    
    <div class="form-inline mt-4 mb-4 row">
      <%= f.label "ブランド", class: "col-2 d-flex justify-content-start" %>
      <%= f.text_field :brand, class: "form-control col-8" %>
    </div>
    

    <div class="form-inline mt-4 mb-4 row">
      <%= f.label :category_id, "カテゴリ", class: "col-2 d-flex justify-content-start" %>
      <%= f.select :category_id, Category.all.map { |category| [category.name, category.id] }, {}, class: "form-control" %>
    </div>

     
     <div class="form-inline mt-4 mb-4 row">
      <%= f.label '画像URL', class: "col-2 d-flex justify-content-start" %>

      <% if @product.image_url.present? %>
        <%= image_tag @product.image_url, id: "product-image-preview", class: "img-fluid w-25" %>
      <% else %>
        <img src="#" id="product-image-preview" class="">
      <% end %>

      <div class="d-flex flex-column ml-2">
        <small class="mb-3">600px×600px推奨。<br>商品の魅力が伝わる画像URLを設定して下さい。</small>
        <%= f.text_field :image_url %>
      </div>
    </div>

    <div class="form-inline mt-4 mb-4 row">
       <%= f.label "画像", class: "col-2 d-flex justify-content-start" %>
