<div class="row">
  <div class="col-lg-3">
    <div class="features_items">
        <h4 class="title text-center">カテゴリから探す</h4>
    <%= render partial: "layouts/sidebar", locals: { major_categories: @major_categories } %>
    </div>
  </div>
  <div class="col-12 col-lg-9 padding-right">
    <div class="features_items">
      <h4 class="title text-center">親カテゴリー</h4>
      <div class="row">
        <% @major_categories.each do |major_category|%>
          <div class="col-6 col-lg-3">
            <%= link_to web_show_path(name: major_category.name) do %>
              <% if major_category.image.attached? %>
                <%= image_tag major_category.image, class: "img-thumbnail" %>
              <% else %>
                <%= image_tag "/images/dummy.png", class: "img-thumbnail" %>
              <% end %>
            <% end %>
            <div class="row">
              <div class="col-12">
                <p class="samazon-product-level mt-2">
                  <%= major_category.name %><br>
                  <label><%= major_category.description %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
