<div class="row">
  <div class="col-2">
    <%= render partial: "layouts/sidebar", locals: { categories: @categories, major_category_names: @major_category_names } %>
  </div>
    <div class="col-9">
      <h1>おすすめ商品</h1>
      <div class="row">
        <% @recommend_products.each do |recommend_product| %>
         <div class="col-4">
           <%= link_to product_path(recommend_product) do %>
             <% if recommend_product.image_url.present? %>
              <%= image_tag recommend_product.image_url, class: "img-thumbnail" %>
            <% elsif recommend_product.image.attached? %>
              <%= image_tag recommend_product.image, class: "img-thumbnail" %>
            <% else %>
              <%= image_tag "/images/dummy.png", class: "img-thumbnail" %>
            <% end %>
           <% end %>
           <div class="row">
             <div class="col-12">
               <p class="samazon-product-level mt-2">
                 <%= recommend_product.name %>
                 <label>￥<%= recommend_product.price %>
               </p>
             </div>
           </div>
         </div>
       <% end %>
      </div>
    </div>
</div>

