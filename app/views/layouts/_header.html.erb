 <header>
  <a id="navbar-mobile-menu-close" class="navbar-toggler collapsed" data-toggle="collapse" data-target="#navbarSupportedContent" 
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></a>
  <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-white shadow-sm samazon-header-container">
    <%= form_with url: products_path, method: :get, local: true, class: '' do |f| %>
      <div class="input-group">
        <%= link_to web_index_path,class:'samazon-logo-lini' do %>
          <%= image_tag "/images/logo.jpg" %>
        <% end %>
        <div class="input-group-append">
          <%= f.button type: :button, class: 'btn btn-light',name:nil,id:"backBtn" do %>
            <i class="fas fa-undo"></i>
          <% end %>
        </div>
        <%= f.text_field :keyword, class: 'form-control samazon-header-search-input',value:@keyword %>
        <div class="input-group-append">
          <%= f.button type: :submit, class: 'btn samazon-header-search-button',name:nil do %>
            <i class="fas fa-search samazon-header-search-icon"></i>
          <% end %>
        </div>
      </div>
    <% end %>
    
    
    <div class="collapse navbar-collapse navbar-right" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="sider-bar">
          <div id="hmenu-header">
            <div id="hmenu-header-top">
              <%= link_to mypage_users_path, class: "nav-link text-center" do %>
                <i class="fas fa-user pr-xl-2 pr-md-0 pr-2"></i><span class="d-block mt-1">マイページ</span>
              <% end %>
            </div>
          </div>
        </li>
        <li class="sider-bar">
          <%= link_to web_index_path, class: "btn btn-link btn-block d-flex justify-content-between" do %>
              <h2 class="text-dark mt-2">ホームページ</h2>
              <i class="fas fa-home text-dark float-right"></i>
            
          <% end %>
        </li>
        <% @major_categories.each_with_index do |major_category,name_index| %>
        <li class="sider-bar">
          <%= link_to web_show_path(name: major_category.name) do %>
            <h2 class="text-dark mb-2 mb-2 ml-2"><%=major_category.name%></h2>
          <% end %>
        </li>
        <% end %>
      <% if user_signed_in? %>
        <li class="nav-item mr-1 header-bar">
          <%= link_to mypage_users_path, class: "nav-link text-center" do %>
            <i class="fas fa-user pr-xl-2 pr-md-0 pr-2"></i><span class="d-block mt-1">マイページ</span>
          <% end %>
        </li>
        <li class="nav-item mr-1">
          <%= link_to mypage_favorite_users_path, class: "nav-link text-center" do %>
            <i class="fas fa-heart"></i><span class="d-block mt-1">お気に入り</span>
          <% end %>
        </li>
        <li class="nav-item mr-1">
          <%= link_to cart_users_path, class: "nav-link text-center" do %>
            <i class="fas fa-shopping-cart"></i><span class="d-block mt-1">カート</span>
          <% end %>
        </li>
      <% end %>    
      </ul>
    </div>
  </nav>
  
</header>
